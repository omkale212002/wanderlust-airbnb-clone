<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <div class="card shadow p-4 mx-auto" style="max-width: 600px;">
    <h2 class="text-center mb-4 fw-bold">Edit Listing</h2>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label fw-semibold">Title</label>
        <input 
          type="text" 
          class="form-control" 
          id="title" 
          name="title" 
          value="<%= listing.title %>" 
          required
        >
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label fw-semibold">Description</label>
        <textarea 
          class="form-control" 
          id="description" 
          name="description" 
          rows="4" 
          required
        ><%= listing.description %></textarea>
      </div>

      <!-- Image URL -->
      <div class="mb-3">
        <label for="image" class="form-label fw-semibold">New Image URL</label>
        <input 
          type="file" 
          class="form-control" 
          id="image" 
          name="image" 
          placeholder="https://example.com/image.jpg"
        >
        <% if (listing.image && listing.image.url) { %>
          <div class="text-center mt-3">
            <img 
              src="<%= listing.image.url %>" 
              alt="Current Image" 
              class="img-fluid rounded shadow-sm" 
              style="max-height: 200px; object-fit: cover;"
            >
            <p class="text-muted small mt-2">Current image preview</p>
          </div>
        <% } %>
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label for="price" class="form-label fw-semibold">Price (â‚¹)</label>
        <input 
          type="number" 
          class="form-control" 
          id="price" 
          name="price" 
          value="<%= listing.price %>" 
          required
        >
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label fw-semibold">Location</label>
        <input 
          type="text" 
          class="form-control" 
          id="location" 
          name="location" 
          value="<%= listing.location %>" 
          required
        >
      </div>

      <!-- Country -->
      <div class="mb-4">
        <label for="country" class="form-label fw-semibold">Country</label>
        <input 
          type="text" 
          class="form-control" 
          id="country" 
          name="country" 
          value="<%= listing.country %>" 
          required
        >
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-success px-4 py-2 fw-semibold">
          Update Listing
        </button>
      </div>
    </form>
  </div>
</div>
